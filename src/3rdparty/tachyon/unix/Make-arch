	"ARCH = macosx-x86-thr-ogl" \
	"CC = cc" \
	"CFLAGS = -O2 -ffast-math -DBsd $(THREADSFLAGS) -I/usr/X11R6/include $(MISCFLAGS) -DUSEOPENGL" \
	"AR = ar" \
	"ARFLAGS = r" \
	"STRIP = strip" \
	"RANLIB = ranlib" \
	"LIBS = -L. -ltachyon $(MISCLIB) -lpthread -L/usr/X11R6/lib -lGLU -lGL -lX11"


